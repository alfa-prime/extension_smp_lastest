# Makefile for managing Docker-based FastAPI app

include .env
export


# --- Development ---
up:
	docker compose up --build

down:
	docker compose down

bash:
	docker exec -it ${DEV_CONTAINER_NAME} bash

# --- Production ---
up-prod:
	docker compose -f docker-compose.prod.yml up --build -d

down-prod:
	docker compose -f docker-compose.prod.yml down

logs-prod:
	docker compose -f docker-compose.prod.yml logs -f app

bash-prod:
	docker exec -it ${PROD_CONTAINER_NAME} bash


# --- Code Quality ---
# –≠—Ç–æ—Ç –±–ª–æ–∫ —Å–æ–¥–µ—Ä–∂–∏—Ç –∫–æ–º–∞–Ω–¥—ã –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏ –∏ —É–ª—É—á—à–µ–Ω–∏—è –∫–∞—á–µ—Å—Ç–≤–∞ –∫–æ–¥–∞.
# –û–Ω–∏ –≤—ã–ø–æ–ª–Ω—è—é—Ç—Å—è –Ω–∞ –≤–∞—à–µ–π –ª–æ–∫–∞–ª—å–Ω–æ–π –º–∞—à–∏–Ω–µ, –∞ –Ω–µ –≤–Ω—É—Ç—Ä–∏ Docker-–∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞.

# –ö–æ–º–∞–Ω–¥–∞ `lint`: –ü—Ä–æ–≤–µ—Ä—è–µ—Ç –∫–æ–¥ –Ω–∞ –Ω–∞–ª–∏—á–∏–µ –æ—à–∏–±–æ–∫ –∏ –Ω–∞—Ä—É—à–µ–Ω–∏–π —Å—Ç–∏–ª—è, –ù–û –ù–ï –ò–ó–ú–ï–ù–Ø–ï–¢ –§–ê–ô–õ–´.
# –ò–¥–µ–∞–ª—å–Ω–æ –ø–æ–¥—Ö–æ–¥–∏—Ç –¥–ª—è –∑–∞–ø—É—Å–∫–∞ –≤ CI/CD (—Å–∏—Å—Ç–µ–º–∞—Ö –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–π —Å–±–æ—Ä–∫–∏) –∏–ª–∏ –ø–µ—Ä–µ–¥ –∫–æ–º–º–∏—Ç–æ–º,
# —á—Ç–æ–±—ã —É–±–µ–¥–∏—Ç—å—Å—è, —á—Ç–æ –≤—ã –Ω–µ –¥–æ–±–∞–≤–ª—è–µ—Ç–µ –≤ —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π "–≥—Ä—è–∑–Ω—ã–π" –∫–æ–¥.
# –ï—Å–ª–∏ —Ö–æ—Ç—è –±—ã –æ–¥–Ω–∞ –∏–∑ –∫–æ–º–∞–Ω–¥ –Ω–∞–π–¥–µ—Ç –ø—Ä–æ–±–ª–µ–º—É, `make lint` –∑–∞–≤–µ—Ä—à–∏—Ç—Å—è —Å –æ—à–∏–±–∫–æ–π.
lint:
	# ruff check .: –ó–∞–ø—É—Å–∫–∞–µ—Ç –ª–∏–Ω—Ç–µ—Ä ruff –¥–ª—è –ø–æ–∏—Å–∫–∞ –ø–æ—Ç–µ–Ω—Ü–∏–∞–ª—å–Ω—ã—Ö –æ—à–∏–±–æ–∫ –∏ –ø—Ä–æ–±–ª–µ–º –≤ —Ç–µ–∫—É—â–µ–π –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏–∏.
	@echo "üîç –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–æ–¥–∞ —Å –ø–æ–º–æ—â—å—é ruff..."
	ruff check .

	# black --check .: –ü—Ä–æ–≤–µ—Ä—è–µ—Ç, –æ—Ç—Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω –ª–∏ –∫–æ–¥ —Å–æ–≥–ª–∞—Å–Ω–æ —Å—Ç–∞–Ω–¥–∞—Ä—Ç—É Black, –Ω–µ –∏–∑–º–µ–Ω—è—è —Ñ–∞–π–ª—ã.
	@echo "üíÖ –ü—Ä–æ–≤–µ—Ä–∫–∞ —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏—è —Å –ø–æ–º–æ—â—å—é black..."
	black --check .

	# isort --check-only .: –ü—Ä–æ–≤–µ—Ä—è–µ—Ç, –æ—Ç—Å–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω—ã –ª–∏ –∏–º–ø–æ—Ä—Ç—ã, –Ω–µ –∏–∑–º–µ–Ω—è—è —Ñ–∞–π–ª—ã.
	@echo "üìö –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–∏ –∏–º–ø–æ—Ä—Ç–æ–≤ —Å –ø–æ–º–æ—â—å—é isort..."
	isort --check-only .

	@echo "‚úÖ –ö–æ–¥ —á–∏—Å—Ç—ã–π!"


# –ö–æ–º–∞–Ω–¥–∞ `format`: –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –∏—Å–ø—Ä–∞–≤–ª—è–µ—Ç –≤—Å–µ –Ω–∞–π–¥–µ–Ω–Ω—ã–µ –ø—Ä–æ–±–ª–µ–º—ã —Å–æ —Å—Ç–∏–ª–µ–º.
# –ó–∞–ø—É—Å–∫–∞–π—Ç–µ —ç—Ç—É –∫–æ–º–∞–Ω–¥—É –ø–µ—Ä–µ–¥ –∫–æ–º–º–∏—Ç–æ–º, —á—Ç–æ–±—ã –≤–∞—à –∫–æ–¥ –≤—Å–µ–≥–¥–∞ –±—ã–ª —á–∏—Å—Ç—ã–º –∏ –æ—Ç—Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–Ω—ã–º.
format:
	# ruff --fix .: –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –∏—Å–ø—Ä–∞–≤–ª—è–µ—Ç –≤—Å–µ –ø—Ä–æ–±–ª–µ–º—ã, –∫–æ—Ç–æ—Ä—ã–µ ruff –º–æ–∂–µ—Ç –∏—Å–ø—Ä–∞–≤–∏—Ç—å —Å–∞–º.
	@echo "üîß –ò—Å–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –æ—à–∏–±–æ–∫ —Å –ø–æ–º–æ—â—å—é ruff..."
	ruff --fix .

	# black .: –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ—Ç –≤–µ—Å—å –∫–æ–¥ –≤ –ø—Ä–æ–µ–∫—Ç–µ —Å–æ–≥–ª–∞—Å–Ω–æ —Å—Ç–∞–Ω–¥–∞—Ä—Ç—É Black.
	@echo "üé® –§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –∫–æ–¥–∞ —Å –ø–æ–º–æ—â—å—é black..."
	black .

	# isort .: –°–æ—Ä—Ç–∏—Ä—É–µ—Ç –≤—Å–µ –∏–º–ø–æ—Ä—Ç—ã –≤ –ø—Ä–æ–µ–∫—Ç–µ.
	@echo "üì¶ –°–æ—Ä—Ç–∏—Ä–æ–≤–∫–∞ –∏–º–ø–æ—Ä—Ç–æ–≤ —Å –ø–æ–º–æ—â—å—é isort..."
	isort .

	@echo "‚ú® –ö–æ–¥ –æ—Ç—Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω!"


# --- Common ---
clean:
	docker system prune -a --volumes -f